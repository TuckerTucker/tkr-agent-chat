{
  "name": "tkr-agent-chat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:client": "vite",
    "dev:server": "source start_env && uvicorn api_gateway.src.main:app --reload --host 0.0.0.0 --port 8000",
    "dev": "echo \"üöÄ Starting TKR Agent Chat development servers...\" && node -e \"if (!require('fs').existsSync('.env')) { console.log('\\x1b[33m‚ö†Ô∏è  No .env file found. Running setup first...\\x1b[0m'); require('child_process').execSync('./setup.sh', {stdio: 'inherit'}); }\" && concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "db:init": "source start_env && python -m api_gateway.scripts.init_db",
    "db:reset": "rm -f api_gateway/chats/chat_database.db && npm run db:init",
    "setup": "chmod +x ./setup.sh && ./setup.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:backend": "source start_env && cd api_gateway && python -m pytest src/tests/",
    "test:all": "source start_env && ./run_tests.sh",
    "test:load": "cd api_gateway && python load_test.py"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.3",
    "@tanstack/react-query": "^5.74.3",
    "class-variance-authority": "^0.7.1",
    "eventemitter3": "^5.0.1",
    "lucide-react": "^0.503.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/socket.io-client": "^1.4.36",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "postcss-nesting": "^13.0.1",
    "socket.io-client": "^4.8.1",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.1.1"
  }
}
